<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ToolPocket.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="ToolPocket.Views.MainView"
             x:DataType="viewModels:MainViewViewModel">

    <UserControl.Resources>
        <SolidColorBrush x:Key="SidebarButtonBgColor"
                         Color="#FF31572C" />
        <SolidColorBrush x:Key="TopBarBgColor"
                         Color="#ffffff" />
        <SolidColorBrush x:Key="MainSectionBgColor"
                         Color="#efefef" />
        <SolidColorBrush x:Key="VeryLightGray"
                         Color="#f7f7f8" />
    </UserControl.Resources>

    <UserControl.Styles>
        <!--<Style Selector="Grid">
            <Setter Property="ShowGridLines"
                    Value="False" />
        </Style>-->
        <Style Selector="Button.TopBarButton">
            <Setter Property="Background"
                    Value="{StaticResource SidebarButtonBgColor}" />
            <Setter Property="Width"
                    Value="30" />
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Margin"
                    Value="0,0,5,0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Opacity="6"
                                      BlurRadius="6" />
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="CornerRadius"
                    Value="5" />
        </Style>
        <Style Selector="Image.TopBarButtonIcon">
            <Setter Property="Width"
                    Value="23" />
            <Setter Property="Height"
                    Value="23" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </UserControl.Styles>

    <Grid Name="MainSectionGrid"
          Background="{StaticResource MainSectionBgColor}">
        <Grid Name="MainBody"
              Grid.Column="0"
              RowDefinitions="52,*">
            <Grid Name="TopBarGrid"
                  Grid.Row="0"
                  Background="{StaticResource TopBarBgColor}">
                <TextBox Name="SearchBar"
                         Width="230"
                         Margin="50,0,0,0"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         CornerRadius="10"
                         Background="{StaticResource VeryLightGray}"
                         Watermark="Search..." />
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0, 10,0">
                    <Button Name="AddNewAppButton"
                            Classes="TopBarButton"
                            Margin="5,0,10,0"
                            Command="{Binding AddNewApp}">
                        <ToolTip.Tip>
                            <ToolTip CornerRadius="0" ShowDelay="0">
                                Add new app
                            </ToolTip>
                        </ToolTip.Tip>
                        <Image Classes="TopBarButtonIcon"
                               Source="../Assets/1.png" />
                    </Button>
                    <Border BorderBrush="black" BorderThickness="1" Height="15" Margin="5,0,10,0" />
                    <Button Name="SettingsButton"
                            Classes="TopBarButton">
                        <ToolTip.Tip>
                            <ToolTip CornerRadius="0" ShowDelay="0">
                                Settings
                            </ToolTip>
                        </ToolTip.Tip>
                        <Image Classes="TopBarButtonIcon"
                               Source="../Assets/settings-svgrepo-com.png" />
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer
                Grid.Row="1"
                Name="AppsScrollViewer">
                <ItemsControl
                    x:Name="AppsList"
                    ItemsSource="{Binding Apps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5"
                                Padding="10"
                                CornerRadius="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                Background="#FF2A2A2A">

                                <Grid ColumnDefinitions="*,Auto">
                                    <!-- App info -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding AppName}"
                                                   FontWeight="Bold"
                                                   Foreground="White" />
                                        <TextBlock Text="{Binding AppPath}"
                                                   FontSize="12"
                                                   Foreground="LightGray" />
                                    </StackPanel>

                                    <!-- Run button -->
                                    <Button
                                        Grid.Column="1" Content="Run"
                                        Margin="5,0,0,0" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>